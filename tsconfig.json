{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "module": "esnext",
    "target": "esnext",
    "baseUrl": "./",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "includes": ["src"],
  "exclude": ["node_modules", "dist", "coverage"]
}
